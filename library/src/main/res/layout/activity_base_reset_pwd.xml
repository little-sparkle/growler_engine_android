<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BaseResetPwdActivity">

    <include
        android:id="@+id/title_bar"
        layout="@layout/base_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/input_area_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_item_height">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/input_original_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/mobile_focused"
                android:hint="@string/hint_original_password"
                android:textColorHint="@color/text_hint" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_item_height">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/input_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/auth_code_unfocused"
                android:hint="@string/hint_new_password"
                android:textColorHint="@color/text_hint" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_item_height">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/input_new_pwd_confirmation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/password_unfocused"
                android:hint="@string/hint_new_password_confirmation"
                android:textColorHint="@color/text_hint" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/reset_pwd_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_button_width"
        android:layout_below="@+id/input_area_container"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_margin"
        android:background="@color/action_button_background"
        android:text="@string/reset_pwd"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/text_secondary" />
</RelativeLayout>
